# Create diabetes dataset manually
diabetes <- data.frame(
  Age = c(21,25,29,33,37,41,45,49,53,57,61,65),
  BloodPressure = c(70,72,75,78,80,82,85,88,90,92,95,98)
)

# View dataset
head(diabetes)

# Scatter plot: Blood Pressure vs Age
plot(diabetes$Age, diabetes$BloodPressure,
     col = "blue",
     pch = 16,
     main = "Blood Pressure vs Age",
     xlab = "Age",
     ylab = "Blood Pressure")

# Create age groups
age_group <- cut(diabetes$Age, breaks = 3)

# Mean Blood Pressure for each age group
bp_mean <- tapply(diabetes$BloodPressure, age_group, mean)

# Bar chart
barplot(bp_mean,
        col = "orange",
        main = "Average Blood Pressure by Age Group",
        ylab = "Blood Pressure",
        xlab = "Age Groups")
